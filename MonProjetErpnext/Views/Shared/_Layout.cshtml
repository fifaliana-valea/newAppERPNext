<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ERPNext Manager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        :root {
            --sidebar-width: 280px;
            --primary-color: #6c5ce7;
            --secondary-color: #a29bfe;
            --text-color: #2d3436;
            --light-bg: #ffffff;
            --border-color: #dfe6e9;
            --hover-color: #f1f3ff;
        }
        
        body {
            display: flex;
            min-height: 100vh;
            background-color: #f8f9fa;
            color: var(--text-color);
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
        }
        
        /* Sidebar */
        .sidebar {
            width: var(--sidebar-width);
            background-color: var(--light-bg);
            position: fixed;
            height: 100vh;
            box-shadow: 0 0 30px rgba(108, 92, 231, 0.1);
            z-index: 1000;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            border-right: none;
            display: flex;
            flex-direction: column;
        }
        
        .sidebar-header {
            padding: 25px;
            text-align: center;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        }
        
        .erpnext-icon {
            font-size: 2rem;
            color: white;
            background: rgba(255, 255, 255, 0.2);
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 10px;
        }
        
        .sidebar-title {
            color: white;
            font-weight: 600;
            font-size: 1.2rem;
            margin: 0;
        }
        
        .user-profile {
            display: flex;
            align-items: center;
            padding: 25px 20px;
            background-color: white;
            border-bottom: 1px solid var(--border-color);
        }
        
        .admin-icon {
            background-color: rgba(108, 92, 231, 0.1);
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
        }
        
        .admin-icon i {
            color: var(--primary-color);
            font-size: 1.5rem;
        }
        
        .user-info h6 {
            margin: 0;
            font-weight: 600;
            color: var(--text-color);
            font-size: 1rem;
        }
        
        .user-info small {
            color: #636e72;
            font-size: 0.8rem;
            display: block;
            margin-top: 3px;
        }
        
        .sidebar-menu {
            padding: 15px 0;
            list-style: none;
            margin: 0;
        }
        
        .sidebar-menu li a {
            color: var(--text-color);
            padding: 14px 25px;
            display: flex;
            align-items: center;
            text-decoration: none;
            transition: all 0.3s ease;
            font-weight: 500;
            margin: 5px 10px;
            border-radius: 8px;
            position: relative;
            overflow: hidden;
        }
        
        .sidebar-menu li a:hover {
            background-color: var(--hover-color);
            color: var(--primary-color);
            transform: translateX(5px);
        }
        
        .sidebar-menu li.active a {
            background-color: rgba(108, 92, 231, 0.1);
            color: var(--primary-color);
            font-weight: 600;
        }
        
        .sidebar-menu li.active a::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            height: 100%;
            width: 3px;
            background-color: var(--primary-color);
        }
        
        .sidebar-menu li a i {
            margin-right: 12px;
            font-size: 1.2rem;
            width: 24px;
            text-align: center;
            transition: all 0.3s;
        }
        
        .sidebar-menu li a:hover i {
            transform: scale(1.1);
        }
        
        .badge-notification {
            margin-left: auto;
            background-color: var(--primary-color);
            color: white;
            font-size: 0.7rem;
            padding: 3px 8px;
            border-radius: 10px;
        }
        
        /* Main Content */
        .main-content {
            margin-left: var(--sidebar-width);
            width: calc(100% - var(--sidebar-width));
            padding: 30px;
            transition: all 0.3s;
        }
        
        /* Responsive */
        @@media (max-width: 992px) {
            .sidebar {
                margin-left: -280px;
            }
            .sidebar.active {
                margin-left: 0;
            }
            .main-content {
                width: 100%;
                margin-left: 0;
            }
        }
        
        /* Animation */
        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .sidebar-menu li {
            animation: fadeIn 0.4s ease forwards;
            opacity: 0;
        }
        
        .sidebar-menu li:nth-child(1) { animation-delay: 0.1s; }
        .sidebar-menu li:nth-child(2) { animation-delay: 0.2s; }
        .sidebar-menu li:nth-child(3) { animation-delay: 0.3s; }
        .sidebar-menu li:nth-child(4) { animation-delay: 0.4s; }
        .sidebar-menu li:nth-child(5) { animation-delay: 0.5s; }
        
        /* Style pour le menu de déconnexion */
        .logout-menu {
            margin-top: auto;
            padding-bottom: 20px;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-header">
            <div class="erpnext-icon">
                <i class="bi bi-box-seam"></i>
            </div>
            <h5 class="sidebar-title">ERPNext</h5>
        </div>
        
        <div class="user-profile">
            <div class="admin-icon">
                <i class="bi bi-shield-check"></i>
            </div>
            <div class="user-info">
                <div class="user-info">
                    <h6>@Context.Session.GetString("FullName")</h6>
                    <small>@User.Identity?.Name</small>
                </div>
            </div>
        </div>
        
        <!-- Conteneur flexible pour le contenu de la sidebar -->
        <div class="d-flex flex-column h-100">
            <!-- Menu principal -->
            <ul class="sidebar-menu">
                <li>
                    <a asp-controller="Home" asp-action="Index">
                        <i class="bi bi-speedometer2"></i> Tableau de bord
                    </a>
                </li>
                <li>
                    <a asp-controller="Suppliers" asp-action="Index">
                        <i class="bi bi-people"></i> Fournisseurs
                    </a>
                </li>
                <li>
                    <a asp-controller="PurchaseOrder" asp-action="Index">
                        <i class="bi bi-cart3"></i> Commandes
                    </a>
                </li>
                <li>
                    <a asp-controller="PurchaseInvoice" asp-action="Index">
                        <i class="bi bi-receipt"></i> Factures
                    @* <span class="badge badge-notification">3</span> *@
                    </a>
                </li>
            </ul>
            
            <!-- Menu de déconnexion en bas -->
            <ul class="sidebar-menu logout-menu">
                <li>
                    <a asp-controller="Login" asp-action="Logout">
                        <i class="bi bi-box-arrow-right"></i> Déconnexion
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Toggle sidebar on mobile
        $('#sidebarToggle').click(function() {
            $('.sidebar').toggleClass('active');
        });
        
        // Highlight active menu item
        $(document).ready(function() {
            var current = location.pathname;
            $('.sidebar-menu li a').each(function() {
                var $this = $(this);
                if ($this.attr('href') === current) {
                    $this.parent().addClass('active');
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>