@model MonProjetErpnext.Models.Suppliers.EditPriceViewModel

@{
    ViewData["Title"] = "Modifier le prix unitaire";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title">
                <i class="fas fa-edit"></i> @ViewData["Title"]
            </h3>
        </div>
        
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            <form asp-action="EditItemPrice" method="post">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">Soumission</label>
                            <p class="form-control-plaintext">@Model.QuotationName</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">Article</label>
                            <p class="form-control-plaintext">@Model.ItemCode - @Model.ItemName</p>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="font-weight-bold">Unité</label>
                            <p class="form-control-plaintext">@Model.UnitOfMeasure</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="font-weight-bold">Quantité</label>
                            <p class="form-control-plaintext">@Model.Quantity.ToString("N2")</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="font-weight-bold">Prix actuel</label>
                            <p class="form-control-plaintext">@Model.CurrentPrice.ToString("N2") €</p>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="NewPrice" class="font-weight-bold"></label>
                    <input asp-for="NewPrice" class="form-control" type="number"/>
                    <span asp-validation-for="NewPrice" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="QuotationName" />
                <input type="hidden" asp-for="ItemCode" />
                <input type="hidden" asp-for="ItemName" />
                <input type="hidden" asp-for="UnitOfMeasure" />
                <input type="hidden" asp-for="Quantity" />
                <input type="hidden" asp-for="CurrentPrice" />

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Enregistrer
                    </button>
                    <a asp-action="GetSupplierQuotations" asp-route-supplierId="@Model.SupplierName" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Annuler
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}