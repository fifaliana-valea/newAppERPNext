@model List<MonProjetErpnext.Models.Suppliers.Supplier>
@{
    ViewData["Title"] = "Liste des Fournisseurs";
    int currentPage = ViewBag.CurrentPage ?? 1;
    int pageSize = ViewBag.PageSize ?? 5;
    int totalItems = ViewBag.TotalItems ?? 0;
    int totalPages = ViewBag.TotalPages ?? 1;
}
<style>
    /* Style pour la pagination */
.pagination {
    margin-top: 20px;
    display: flex;
    justify-content: center;
}

.page-item.active .page-link {
    background-color: var(--primary-color); /* #6c5ce7 */
    border-color: var(--primary-color);
    color: white;
    box-shadow: 0 2px 5px rgba(108, 92, 231, 0.2);
}

.page-link {
    color: var(--primary-color);
    border: 1px solid var(--border-color);
    padding: 0.5rem 0.75rem;
    margin: 0 3px;
    border-radius: 6px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.page-link:hover {
    background-color: var(--hover-color); /* #f1f3ff */
    color: var(--primary-color);
    text-decoration: none;
}

.page-item.disabled .page-link {
    color: #adb5bd;
    pointer-events: none;
    background-color: white;
    border-color: var(--border-color);
}

/* Style pour le tableau */
.table-responsive {
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    border-radius: 8px;
    box-shadow: 0 2px 15px rgba(108, 92, 231, 0.1);
    margin-bottom: 1.5rem;
}

#dataTable {
    width: 100%;
    margin-bottom: 1rem;
    color: var(--text-color);
    border-collapse: separate;
    border-spacing: 0;
}

#dataTable th {
    background-color: #f8f9fc;
    color: var(--primary-color);
    font-weight: 600;
    padding: 1rem;
    position: sticky;
    top: 0;
    z-index: 10;
    border-bottom: 2px solid var(--primary-color);
}

#dataTable td {
    padding: 0.75rem;
    vertical-align: middle;
    border-top: 1px solid var(--border-color);
}

#dataTable tr:hover {
    background-color: var(--hover-color);
}

#dataTable tr:nth-child(even) {
    background-color: rgba(108, 92, 231, 0.03);
}

/* Animation fluide pour les lignes du tableau */
#dataTable tr {
    transition: background-color 0.3s ease;
}

/* Style pour les boutons dans le tableau si nécessaire */
#dataTable .btn {
    padding: 0.25rem 0.5rem;
    font-size: 0.875rem;
    line-height: 1.5;
}
</style>

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Fournisseurs</h6>
            <div>
                <select class="form-control form-control-sm" style="width: 100px;" 
                        onchange="updatePageSize(this.value)">
                    <option value="5" selected="@(pageSize == 5)">5</option>
                    <option value="10" selected="@(pageSize == 10)">10</option>
                    <option value="15" selected="@(pageSize == 15)">15</option>
                </select>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="suppliersTable">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom du Fournisseur</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var supplier in Model)
                        {
                            <tr>
                                <td>@supplier.Name</td>
                                <td>@supplier.SupplierName</td>
                                <td>
                                    <form asp-controller="Suppliers" asp-action="GetSupplierQuotations" method="get">
                                        <input type="hidden" name="supplierId" value="@supplier.Name" />
                                        <button type="submit" class="btn btn-info btn-sm">
                                            Voir devis
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = 1, pageSize })">Première</a>
                    </li>
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = currentPage - 1, pageSize })">Précédent</a>
                    </li>

                    @for (int i = 1; i <= totalPages; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = i, pageSize })">@i</a>
                        </li>
                    }

                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = currentPage + 1, pageSize })">Suivant</a>
                    </li>
                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = totalPages, pageSize })">Dernière</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function updatePageSize(size) {
            window.location.href = '@Url.Action("Index")' + '?page=1&pageSize=' + size;
        }
    </script>
}